<h1>All Tasks:</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed? %>
      <li><i class="fa-solid fa-square-check"></i>  <%= link_to task.title, task_path(task)%>- <%= task.details %>
      <%= link_to "Delete",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %></li>
    <% else %>
      <li><i class="fa-solid fa-square"></i> <%= link_to task.title, task_path(task)%>- <%= task.details %><%= link_to "Delete",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %></li>
    <% end %>
  <% end %>
</ul>
